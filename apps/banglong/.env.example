# ============================================
# Banglong Website Environment Variables
# ============================================
#
# Instructions:
# 1. Copy this file to .env.local
# 2. Replace all placeholder values with your actual credentials
# 3. NEVER commit .env.local to version control
#
# ============================================

# ============================================
# Database Configuration (Vercel Postgres)
# ============================================
POSTGRES_URL=postgres://default:password@host/verceldb
POSTGRES_PRISMA_URL=postgres://default:password@host/verceldb?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NO_SSL=postgres://default:password@host/verceldb
POSTGRES_URL_NON_POOLING=postgres://default:password@host/verceldb
POSTGRES_USER=default
POSTGRES_HOST=host
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=verceldb

# Or use generic DATABASE_URL
DATABASE_URL=postgres://default:password@host/verceldb

# ============================================
# NextAuth Configuration
# ============================================
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=generate_a_random_32_character_secret_key
NEXTAUTH_URL=http://localhost:3000

# ============================================
# S3-Compatible Storage (Cloudflare R2 / AWS S3)
# ============================================
S3_BUCKET=your-bucket-name
S3_REGION=auto
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
# Optional: for Cloudflare R2 or MinIO
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Alternative: Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_token

# ============================================
# Storage Type Configuration
# ============================================
# Options: 'json' | 'prisma' | 's3' | 'blob'
STORAGE_TYPE=prisma

# ============================================
# AWS API Gateway (Email Service)
# ============================================
API_GATEWAY_URL=https://your-api-id.execute-api.ap-northeast-1.amazonaws.com/prod
API_GATEWAY_API_KEY=your_api_gateway_key

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=邦瓏建設

# ============================================
# Sentry (Error Tracking) - Optional
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your-org
SENTRY_PROJECT=banglong

# ============================================
# Testing Configuration (Optional)
# ============================================
TEST_BASE_URL=http://localhost:3000
SILENT_TESTS=true
